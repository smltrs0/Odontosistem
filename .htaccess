# Activar RewriteEngine
RewriteEngine on
RewriteBase /

RewriteCond %{REQUEST_FILENAME}.php -f

#   Reescribir la URL solicitada por el usuario
RewriteRule ^/$ /public/index.php
RewriteRule ^(.*)$ /public/index.php


